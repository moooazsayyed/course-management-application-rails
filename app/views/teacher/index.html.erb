<h1>Teachers</h1>
<%= link_to 'New teacher', new_teacher_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Course</th>
      <th>Department</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.name %></td>
        <td><%= teacher.course %></td>
        <td><%= teacher.dept %></td>
        <td><%= teacher.email %></td>
        <td><%= link_to 'Show', teacher_path(teacher) %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Delete', destroy_teacher_path(teacher), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
